<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentPage"
    android:elevation="10dp"
    android:background="@drawable/physics"
    tools:context="com.kumar.dipanshu.visar.Fragments.ContentFragment">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/physics"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:shadowColor="#011812"
                android:text="Physics "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FF3D00"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="normal" />


            <TextView
                android:id="@+id/chemistry"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:clickable="false"
                android:padding="5dp"

                android:shadowColor="#011812"
                android:text="Chemistry "
                android:textAllCaps="true"
                android:textColor="#FF3D00"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="normal" />
        </LinearLayout>

        <ImageView
            android:id="@+id/swiper"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorAccent"
            android:scaleType="fitCenter"
            android:src="@drawable/swipe_directions"
            tools:srcCompat="@drawable/swipe_directions" />


        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="     " />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     " />

    </LinearLayout>

</FrameLayout>


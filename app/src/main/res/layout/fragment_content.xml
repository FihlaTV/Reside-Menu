<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentPage"
    android:elevation="10dp"
    android:background="@drawable/physics"
    tools:context="com.kumar.dipanshu.visar.Fragments.ContentFragment">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="bottom"
            android:orientation="horizontal">


        </LinearLayout>

        <ImageView
            android:id="@+id/swiper"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorAccent"
            android:scaleType="fitCenter"
            android:src="@drawable/swipe_directions"
            tools:srcCompat="@drawable/swipe_directions" />


        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/Physics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="02"
                android:background="#1EB5E6"
                android:text="PHYSICS"
                android:textColor="#F8010114"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginBottom="@dimen/cardview_compat_inset_shadow">

            </Button>

            <Button
                android:id="@+id/Chemistry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="02"
                android:background="#1EB5E6"
                android:text="CHEMISTRY"
                android:textColor="#F8010114"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_marginBottom="@dimen/cardview_compat_inset_shadow">
            </Button>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>

